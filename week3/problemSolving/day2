/*
 *
 * Given an array representing prices of the stock on different days,
 * find the maximum profit that can be earned by performing maximum of
 * one transaction. A transaction consists of activity of buying and
 * selling the stock on different or same days.
 *
 */

/*
 *
 * For example in this array - {100, 80, 120, 130, 70, 60, 100, 125}
 * the price of the stock on day-1 is 100, on day-2 is 80 and so on.
 * The maximum profit that could be earned in this window is 65
 * (buy at 60 and sell at 125).
 * For price array - {100, 80, 70, 65, 60, 55, 50}, maximum profit
 * that could be earned is 0.
 *
 */

// Feel free to add helper functions if needed
function getMaxOfArray(numArray) {
  return Math.max.apply(null, numArray);
}
function getMinOfArray(numArray) {
  return Math.min.apply(null, numArray);
}

var maximumProfit = function (array) {
  //your code is here
  let min = array[0];
  let maxProfit = 0;

  for (let i = 1; i < array.length; i++) {
    if (array[i] < min) {
      min = array[i];
    } else {
      if (min - array[i] < maxProfit) {
        maxProfit = array[i] - min;
      } else if (array[i] - min > maxProfit) {
        maxProfit = array[i] - min;
      }
    }
  }
  return maxProfit;
};

let arr1 = [100, 80, 120, 130, 70, 60, 100, 125];
console.log(maximumProfit(arr1)); // should return 65

console.log(maximumProfit([100, 80, 70, 65, 60, 55, 50])); // should return 0

// Trying using the function above with different inputs
var maximumProf = function (array) {
  let min = getMinOfArray(array);
  let max = getMaxOfArray(array);
  //here we should compare min and max index to ensure min comes before max
  // if not we need to find the next max after min index
  let minIndex = array.indexOf(min);
  let maxIndex = array.indexOf(max);
  // If min comes after max we need to find the next max >> I dont know how to find second max !
  //then we will compute profit
  let profit = max - min;

  if (profit < 0) {
    return 0;
  } else {
    return profit;
  }
  return profit;
};

console.log(maximumProf([100, 80, 120, 130, 70, 60, 100, 125])); // should return 65 >> its return 70 !
